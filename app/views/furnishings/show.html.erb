<div class= "map-container">
  <div id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="card-big">
    <h2><%= @furnishing.title %></h2>
    <%= cl_image_tag @furnishing.photo.key, height: 300, width: 400, crop: :fill %>
    <div class="card-big-info">
      <div>
        <p><strong>Description: </strong><%= @furnishing.description %></p>
        <p><strong>Price: </strong>Â£<%= @furnishing.price %></p>
        <div class= "location">
          <p><i class="fas fa-map-marker-alt"></i></p>
          <p class="loc-word"><%= @furnishing.location %></p>
        </div>
      </div>
    </div>
    <div class= "buttons">
      <%= link_to "Back to all", furnishings_path, class: "card-btn" %>
      <% unless current_user == @furnishing.user %>
        <%= link_to "Book me" , new_furnishing_booking_path(@furnishing), class: "card-solid" %>
      <% end %>
    </div>
  </div>
</div>
