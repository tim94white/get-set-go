<div class="furnishing-container">
  <% @furnishings.each do |furnishing| %>
    <div class="card-small p-3 m-3">
      <% if furnishing.photo.attached? %>
        <%= cl_image_tag furnishing.photo.key, height: 300, width: 400, crop: :fill %>
      <% else %>
        <%= image_tag "https://images.unsplash.com/photo-1555041469-a586c61ea9bc?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8c29mYXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=60" %>
      <% end %>
      <% if current_user %>
        <h3><%= link_to furnishing.title, furnishing_path(furnishing) %></h3>
      <% else %>
        <h3><%= link_to furnishing.title, new_user_session_path, data: { confirm: "log on to view" } %></h3>
      <% end %>
      <div class="card-small-infos">
        <p><i class="fas fa-map-marker-alt"></i>
        <%= furnishing.location %>
        </p>
        <p>Â£<%= furnishing.price %>
        </p>
      </div>
    </div>
  <% end %>
</div>