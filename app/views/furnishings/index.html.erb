            </li>
            <% end %>
              <h3>
                <%= link_to furnishing.title, furnishing_path(furnishing) %>
              </h3>
              <div class="card-small-infos">
                <p><i class="fas fa-map-marker-alt"></i>
                  <%= furnishing.location %>
