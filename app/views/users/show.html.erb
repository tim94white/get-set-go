<div class="container">
  <h1> Your Dashboard</h1>

  <div class="your-furnishing">
    <h3> Your furnishings </h3>
    <div class="furnishing-section">
      <% @furnishings.each do |furnishing| %>
        <div class="card p-3 m-3">
          <%= link_to furnishing.title, furnishing_path(furnishing) %>
            <li>
              <%= furnishing.description %>
            </li>
            <li>
              <%= furnishing.price %>
            </li>
            <li>
              <%= furnishing.location %>
            </li>
            <li>
              <%= furnishing.furnishing_type %>
            </li>
            <%= link_to "Edit" , edit_furnishing_path(furnishing), class:"btn btn-primary" %>
            <%= link_to "Delete" , furnishing_path(furnishing), method: :delete, class:"btn btn-danger" %>
        </div>

        <% end %>
          <br>
          <br>
          <%= link_to "Add New" , new_furnishing_path, class:"ml-5 btn btn-success" %>
    </div>
  </div>

  <div class="your-booking">
    <h3> Your bookings </h3>
    <div class="booking-section">
      <div class="card p-3 m-3">
      <% @bookings.each do |booking| %>
        <h2>
          <%= booking.furnishing.title %>
        </h2>
        <li>
          <%= booking.start_date %>
        </li>
        <li>
          <%= booking.end_date %>
        </li>
        <div class="edit_button">
          <%= link_to "Edit" , edit_booking_path(booking), class:"card-btn" %>
          <%= link_to "Delete" , booking_path(booking), method: :delete, class:"card-solid" %>
        </div>
        <% end %>
    </div>
  </div>
  <%= link_to "Back to the index page" , furnishings_path %>
</div>
