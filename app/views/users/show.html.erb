<div class="container-user">
  <h1> Your Dashboard</h1>

  <div class="card-furnishing">
    <h3> Your furnishings </h3>
      <div class="dash-holder">
      <% @furnishings.each do |furnishing| %>
        <div class="card-dash">
          <h2><%= link_to furnishing.title, furnishing_path(furnishing) %></h2>
          <%= cl_image_tag furnishing.photo.key, height: 300, width: 400, crop: :fill %>
          <div class="dash-buttons">
            <%= link_to "Edit" , edit_furnishing_path(furnishing), class:"card-btn" %>
          <%= link_to "Delete" , furnishing_path(furnishing), method: :delete, class:"card-btn" %>
          </div>
          <br>
      </div>
    <% end %>
    </div>
    <%= link_to "Add New" , new_furnishing_path, class:"card-solid" %>
  </div>

  <br>
  <br>

  <div class="card-furnishing">
    <h3> Your bookings </h3>
    <div class="dash-holder">
      <% @bookings.each do |booking| %>
      <div class="card-dash">
        <h2>
          <%= booking.furnishing.title %>
        </h2>
        <%= cl_image_tag booking.furnishing.photo.key, height: 300, width: 400, crop: :fill %>
        <div class="dates">
           <p> <strong>Start Date: </strong> <%= booking.start_date %></p>
           <p> <strong>End Date: </strong> <%= booking.end_date %></p>
        </div>
        <div class="dash-buttons">
          <%= link_to "Edit" , edit_booking_path(booking), class:"card-btn" %>
          <%= link_to "Delete" , booking_path(booking), method: :delete, class:"card-btn" %>
        </div>
        <br>
        <% end %>
    </div>
  </div>
  <%= link_to "Back to the index page" , furnishings_path, class:"card-solid" %>
</div>
